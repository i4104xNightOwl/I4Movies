{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "composite": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist"
    ]
}
