{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/dashboard": ["libs/feature/admin/dashboard/src/index.ts"],
      "@frontend/details": ["libs/feature/movies/details/src/index.ts"],
      "@frontend/home": ["libs/feature/movies/home/src/index.ts"],
      "@frontend/models": ["libs/shared/models/src/index.ts"],
      "@frontend/movies-edit": ["libs/feature/admin/movies-edit/src/index.ts"],
      "@frontend/movies-list": ["libs/feature/admin/movies-list/src/index.ts"],
      "@frontend/playing": ["libs/feature/movies/playing/src/index.ts"],
      "@frontend/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
